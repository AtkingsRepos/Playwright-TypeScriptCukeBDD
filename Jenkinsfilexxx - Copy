pipeline
{
agent any
stages{
stage('Build'){
steps{
bat 'npm install'
echo "building the application"
echo "build success"
}
}
stage('Sanity Test'){
steps{
bat ' npm run sanity'
echo " running Smoke test"
echo "Smoke Test success"
}
}
stage('Deploy to QA'){
steps{
        echo " deploying application to QA environment"
echo "Deployed to QA"
}
}
stage('Security Scans'){
steps{
echo " scanning application for security volunerabilities"
echo "Security scans successful"
echo "good job, well done!!!"
}
}
stage('SonarQube Scans'){
steps{
echo " carrying out SonarQub scans for  application security volunerabilities"
echo "SonarQube Tests success"
}
}
stage('Cross browser test'){
steps{
echo "running cross browser tests"
echo "Cross browser Test success"
}
}

stage('Functional Test'){
steps{
 bat 'npm run test'
echo "Functional Test success"
}
}
stage('Generate HTML report'){
        steps{
        bat "npm run generate:report && npm run open_report"
        
}
}
stage('Deploy to PRP'){
steps{
        echo 'Deployed to Pre-production environmemnt'
        }
}
}
}

